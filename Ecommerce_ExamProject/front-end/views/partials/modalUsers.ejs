<div class="modal fade" id="userModal" tableindex="-1" aria-labelledby="userModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form id="userEditForm">
                <div class="modal-header">
                    <h5 class="modal-title" id="userModalLabel">Edit User</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="text" id="modalUserId" name="id">
                    <div class="row mb-2">
                        <div class="col">
                            <label>First Name</label>
                            <input type="text" class="form-control" id="modalUserFirstName" name="firstName" required>
                        </div>
                        <div class="col">
                            <label>Last Name</label>
                            <input type="text" class="form-control" id="modalUserLastName" name="lastName" required>
                        </div>
                        <div class="mb-2">
                        <label>Username</label>
                        <input type="text" class="form-control" id="modalUserUsername" name="username">
                        </div>
                        <div class="mb-2">
                        <label>Email</label>
                        <input type="text" class="form-control" id="modalUserEmail" name="email">
                        </div>
                        <div class="col">
                            <label>Address</label>
                            <input type="text" class="form-control" id="modalUserAddress" name="address" required>
                        </div>
                        <div class="mb-2">
                            <label>Telephone</label>
                            <input type="number" class="form-control" id="modalUserTelephone" name="telephone" required>
                        </div>                   
                    </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="productModal" tableindex="-1" aria-labelledby="productModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form id="productEditForm">
                <div class="modal-header">
                    <h5 class="modal-title" id="productModalLabel">Edit Product</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="name" id="modalProductId" name="id">
                    <div class="row mb-2">
                        <div class="col">
                            <label>Category</label>
                            <input type="text" class="form-control" id="modalProductCategory" name="category" required>
                        </div>
                        <div class="col">
                            <label>Brand</label>
                            <input type="text" class="form-control" id="modalProductBrand" name="brand" required>
                        </div>
                        <div class="mb-2">
                        <label>Image</label>
                        <input type="text" class="form-control" id="modalProductImgurl" name="imgurl">
                        </div>
                        <div class="col">
                            <label>Name</label>
                            <input type="text" class="form-control" id="modalProductName" name="name" required>
                        </div>
                        <div class="mb-2">
                            <label>Description</label>
                            <textarea class="form-control" id="modalProductDescription" name="description" required></textarea>
                        </div>
                    <div class="row mb-2">
                        <div class="col">
                            <label>Price</label>
                            <input type="number" class="form-control" id="modalProductPrice" name="price" required>
                        </div>

                        <div class=" col">
                            <label>Quantity</label>
                            <input type="number" class="form-control" id="modalProductQuantity" name="quantity" required>
                        </div>

                        <div class="col">
                            <label>Date Added</label>
                            <input type="date" class="form-control" id="modalProductDateAdded" name="date_added">
                        </div>

                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="modalProductDeleted" name="deleted">
                        <label class="form-check-label" for="modalProductDeleted">Delete</label>
                    </div>                    
                </div>
                <div class="modal-footer">
                        <button type="submit" class="btn btn-success">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

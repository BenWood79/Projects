<!DOCTYPE html>
<html>
  <head>
    <%-include('./partials/head.ejs')%>
  <body>
    <%-include('./partials/navbar.ejs')%>
    <div class="table-responsive-sm ">
    <table id="ordersTable" class="table table-striped table-bordered align-middle text-center">
      <thead>
       <% if (user && user.username)  { %>
        <tr>
          <th scope ="col">Id</th>
          <th scope ="col">Caterory</th>
          <th scope ="col">Brand</th>
          <th scope ="col">Image</th>
          <th scope ="col">Name</th>
          <th scope ="col">Description</th>
          <th scope ="col">Price</th>
          <th scope ="col">Quantity</th>
          <th scope ="col">Options</th>
        </tr>
      </thead>
      <tbody id="ordersTableContent">
        <% cart.forEach(function(item) {%>
              <tr>
                <td>
                  <%= item.id %>
                </td>
                <td>
                  <%= item.category  %>
                </td>
                <td>
                  <%= item.brand  %>
                </td>
                <td>
                  <img src='<%= item.imgurl  %>' style="max-width:80px;max-height:80px;"/>
                </td>
                <td>
                  <%= item.name  %>
                </td>
                <td>
                  <%= item.description  %>
                </td>
                <td>
                  <%= item.price  %>
                </td>
                <td>
                  <input type="number" min="0" value="<%= item.quantity  %>" id ="quantity-<%= item.id %>" style="width:60px">
                  <button class="btn btn-primary btn-sm mx-1" type="button" onclick="updateQuantity('<%= item.id %>')"> 
                    Update
                  </button>
                </td>
                <td>
                  <button class="btn btn-warning btn-sm mx-1"
                    type="button" onclick="event.preventDefault();deleteItem('<%= item.id %>')">
                    Delete
                  </button>
                </td>
              </tr>
        <%});%>
      </tbody>
    </table>
    <button class="btn btn-warning btn-sm mx-1"
      onclick="event.preventDefault();CheckOutNow()">
      Check Out
    </button> 
    </div>
     <% } %>
     <%-include('./partials/footer.ejs')%> 
  </body>
</html>

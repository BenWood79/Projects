<!DOCTYPE html>
<html>

<head>
    <%- include('partials/head') %>
</head>

<body>

    <header>
        <%- mainTitle %>
    </header>

    <div class="row-container">

        <div id="signupNavbar" class="col navbar-col">
            <nav class="vertical-navbar">
                <ul>
                    <a href="/">HOME</a>
                    <a href="/signup">SIGN UP</a>
                    <a href="/signin">SIGN IN</a>
                    <a href="/signout">SIGN OUT</a>
                </ul>
            </nav>
        </div>
        <div id="signupForm" class="col form-col">
            <header>
                <%- title %>
            </header>
            <form method="POST" action="/signup" onsubmit="return validateSignup()">
                <section>
                    <label for="fullname">Full Name</label>
                    <input id="fullname" name="fullname" type="text" autocomplete="fullname" required autofocus>
                </section>
                <section>
                    <label for="username">Username</label>
                    <input id="username" name="username" type="text" autocomplete="username" required autofocus>
                </section>
                <section>
                    <label for="current-password">Password</label>
                    <input id="current-password" name="password" type="password" autocomplete="current-password"
                        required>
                </section>
                <button type="submit">Sign up</button>
            </form>
        </div>
    </div>

    <footer>
        <%- footer %>
    </footer>

</body>

</html>
<!DOCTYPE html>

<html>

<%- include('./partials/head.ejs') %>

  <body>

    <% if (req.query.error==='permission' ) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert" style="margin-top: 1rem;">
        You do not have permission to access that page. Please <a href="/login">log in</a> or <a href="/signup">sign
          up</a> as an admin.
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
      <% } %>

        <div class="container-fluid mt-5 text-center">

          <%- include('./partials/navbar.ejs') %>

            <h1>DAB - Adopt an Animal Course Assignment</h1>

            <h2>Welcome to the course assignment for DAB</h2>

            <div id="coverPicture">
              <img src="/img/home.png" alt="">
            </div>

            <div>
              <button onclick="populateDatabase('/')" class="btn-lg btn-info">Populate Database</button>
            </div>

        </div>

      <form action="/logout" method="post">
				<button class="logout" type="submit">Sign out</button>
			</form>

			<div id="login-form">
				<form action="/login/password" method="POST">
					<input type="text" name="username" placeholder="Username" required>
					<input type="password" name="password" placeholder="Password" required>
					<button type="submit">Login</button>
				</form>
				<hr>
				<p class="help">Don't have an account? <a href="/signup">Sign up</a></p>
			</div>

  </body>

</html>
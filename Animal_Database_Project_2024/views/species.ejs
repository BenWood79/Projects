<!DOCTYPE html>
<html>
<%- include('./partials/head.ejs') %>

  <body>
    <%- include('./partials/navbar.ejs') %>
      <div class="container-fluid mt-5">
        <h2 class="p-3 text-center">Species Management</h2>
        <div class="mb-3 text-center">
          <button class="btn btn-success btn-sm mx-1" onclick="addSpecies('/')">Add New Species</button>
        </div>
        <div class="table-responsive">
          <table class="table table-striped table-bordered align-middle text-center">
            <thead class="table-dark">
              <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Options</th>
              </tr>
            </thead>
            <tbody>
              <% if (species && species.length> 0) { %>
                <% species.forEach(function(spec) { %>
                  <tr>
                    <td>
                      <%= spec.id %>
                    </td>
                    <td>
                      <%= spec.Species %>
                    </td>
                    <td>
                      <button class="btn btn-warning btn-sm mx-1"
                        onclick="updateSpecies('/species', '<%= spec.id %>')">Update Species</button>
                      <button class="btn btn-danger btn-sm mx-1"
                        onclick="deleteSpecies('/species', '<%=spec.id%>')">Delete species</button>
                    </td>
                  </tr>
                  <% }); %>
                    <% } else { %>
                      <tr>
                        <td colspan="3" class="text-center">No species found.</td>
                      </tr>
                      <% } %>
            </tbody>
          </table>
        </div>
      </div>
  </body>

</html>